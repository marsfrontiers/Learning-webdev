<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Blog</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <header>
        <div class="container">
            <h1>My Blog</h1>
        </div>
    </header>

    <nav>
        <div class="container">
            <a href="/create" class="btn">Create New Post</a>
        </div>
    </nav>

    <main class="container">
        <section class="posts">
            <% posts.forEach(post => { %>
                <article class="post">
                    <h2><%= post.title %></h2>
                    <p><%= post.content %></p>
                    <div class="post-actions">
                        <a href="/update/<%= post.id %>" class="btn edit-btn">Edit</a>
                        <form action="/delete/<%= post.id %>" method="post">
                            <button type="submit" class="btn delete-btn">Delete</button>
                        </form>
                    </div>
                </article>
            <% }); %>
        </section>
    </main>

    <footer>
        <div class="container">
            <p>&copy; 2024 My Blog. All rights reserved.</p>
        </div>
    </footer>
</body>
</html>
